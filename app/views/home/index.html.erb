<p id="notice"><%= notice %></p>
<div class="top-main">
    <div class="container d-flex align-items-center h-100">
        <div class="row col-lg-6">
            <div class="form-wrapper rounded shadow">
                <div class="form-area p-3">
                    <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
                    <%= form_for :rooms_search ,url: search_rooms_path, method: :get do |form| %>
                        <%= form.label "エリア" %>
                        <%= form.text_field :area, value: "", class: "form-control mb-4", placeholder: "東京" %>
                        <%= form.submit "探す", class: "form-control btn-primary mb-4"  %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="recommendation-wrapper">
    <div class="container">
        <div class="recommendation-list m-5">
            <h1>おすすめのエリア</h1>
            <div class="row">
                <div class="area-image-wrapper col-lg-3 col-6">
                    <%= link_to image_tag("/img_tokyo.jpg", class: "place-img rounded w-100 shadow"), "/rooms/search?rooms_search%5Barea%5D=東京&commit=探す" %>
                    <span>東京</span>
                </div>
                <div class="area-image-wrapper col-lg-3 col-6">
                    <%= link_to image_tag("/img_osaka.jpg", class: "place-img rounded w-100 shadow"), "/rooms/search?rooms_search%5Barea%5D=大阪&commit=探す" %>
                    <span>大阪</span>
                </div>
                <div class="area-image-wrapper col-lg-3 col-6">
                    <%= link_to image_tag("/img_kyoto.jpg", class: "place-img rounded w-100 shadow"), "/rooms/search?rooms_search%5Barea%5D=京都&commit=探す" %>
                    <span>京都</span>
                </div>
                <div class="area-image-wrapper col-lg-3 col-6">
                    <%= link_to image_tag("/img_sapporo.jpg", class: "place-img rounded w-100 shadow"), "/rooms/search?rooms_search%5Barea%5D=札幌&commit=探す" %>
                    <span>札幌</span>
                </div>
            </div>
        </div>
    </div>
</div>
