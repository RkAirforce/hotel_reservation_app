<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 room-nav room-nav-pc border-right d-lg-block d-none">
      <ul>
        <li class="active">基本情報</li>
      </ul>
    </div>
    <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
      <ul>
        <li class="active">基本情報</li>
      </ul>
    </div>
    <div class="col-lg-10" style="background-color: #F6F8F9;">
      <div class="m-5 border" style="background-color: #fff;">
        <%= form_with(model: @room, local: true) do |form| %>
          <div class="form-group p-3 mx-2 border-bottom">
            <h5>ルーム情報登録</h5>
          </div>
          <div class="field form-group form-row p-3 mx-2 border-bottom">
              <div class="col-md-3 required-b pt-2">
                  <%= form.label :name %>
                  <span class="badge  badge-danger p-1">必須</span>
              </div>
              <%= form.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-md-9 px-2 mb-4" %>
              <br />
              <% if @room.errors.include?(:name) %>
                <p style="color: red;"><%= "※ #{@room.errors.full_messages_for(:name).first}" %>
              <% end %>
          </div>

          <div class="field form-group form-row p-3 mx-2 border-bottom">
              <div class="col-md-3 required-b pt-2">
                  <%= form.label :description %>
                  <span class="badge  badge-danger p-1">必須</span>
              </div>
              <%= form.text_field :description, autofocus: true, autocomplete: "description", class: "form-control col-md-9 px-2 mb-4",
                    style: "height: 200px;"%>
              <% if @room.errors.include?(:description) %>
                <p style="color: red;"><%= "※ #{@room.errors.full_messages_for(:description).first}" %>
              <% end %>
          </div>

          <div class="field form-group form-row p-3 mx-2 border-bottom">
              <div class="col-md-3 required-b pt-2">
                  <%= form.label :price %>
                  <span class="badge  badge-danger p-1">必須</span>
              </div>
              <%= form.text_field :price, autofocus: true, autocomplete: "price", class: "form-control col-md-9 px-2 mb-4" %>
              <% if @room.errors.include?(:price) %>
                <p style="color: red;"><%= "※ #{@room.errors.full_messages_for(:price).first}" %>
              <% end %>
          </div>

          <div class="field form-group form-row p-3 mx-2 border-bottom">
              <div class="col-md-3 required-b pt-2">
                  <%= form.label :address %>
                  <span class="badge badge-danger p-1">必須</span>
              </div>
              <%= form.text_field :address, autofocus: true, autocomplete: "address", class: "form-control col-md-9 px-2 mb-4" %>
              <% if @room.errors.include?(:address) %>
                <p style="color: red;"><%= "※ #{@room.errors.full_messages_for(:address).first}" %>
              <% end %>
          </div>

          <div class="field form-group form-row p-3 mx-2 border-bottom">
              <div class="col-md-3 required-b pt-2">
                  <%= form.label :new_room_img %>
                  <span class="badge badge-danger p-1">必須</span>
              </div>
              <div>
                <%= form.file_field :new_room_img, autofocus: true, autocomplete: "new_room_img", class: "form-control col-md-9 px-2 mb-4" %>
                <% if @room.errors.include?(:new_room_img) %>
                  <p style="color: red;"><%= "※ #{@room.errors.full_messages_for(:new_room_img).first}" %>
                <% end %>
              </div>
          </div>

          <div class="actions p-3 mx-2">
            <%= form.submit "登録", class: "col-2 btn btn-primary mx-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'room_img_attach' %>
