<% if alert %><div class="alert alert-danger text-center"><%= alert %></div><% end %>
<div class="container mb-5">
  <div class="login-form-wrapper col-md-6 offset-md-3 col-sm-12 text-center rounded border shadow-sm">
    <p class="my-4">ログイン</p>

    <div class="form-trim col-md-10 offset-md-1 col-sm-12 col-xs-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% resource.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge badge-danger p-1">必須</span></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",
                class: "form-control col-10 px-2" %>
        </div>

        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge badge-danger p-1">必須</span></div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",
                class: "form-control col-10 px-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check form-group form-inline">
            <%= f.label :remember_me %>
            <%= f.check_box :remember_me, class: "px-3" %>
          </div>
        <% end %>

        <div class="actions pb-3">
          <%= f.submit "ログイン", class: "col-md-12 btn btn-primary" %>
        </div>
      <% end %>
      <%= link_to "新しいアカウントを作成", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
