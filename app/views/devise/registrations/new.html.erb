<div class="container user-resistration-wrapper mb-5">
  <div class="resistration-wrapper col-md-6 offset-md-3 col-sm-12 text-center border rounded shadow-sm">
    <p class="my-4">新しいアカウントを作成</p>

    <div class="form-trim col-md-10 offset-md-1 col-sm-12 col-xs-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名",
                class: "form-control col-10 px-2" %>
          <% if resource.errors.include?(:name) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:name).first}" %>
          <% end %>
        </div>

        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",
                class: "form-control col-10 px-2" %>
          <% if resource.errors.include?(:email) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:email).first}" %>
          <% end %>
        </div>

        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード",
                class: "form-control col-10 px-2" %>
          <% if resource.errors.include?(:password) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:password).first}" %>
          <% end %>
        </div>

        <div class="field form-group form-row">
          <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認",
                class: "form-control col-10 px-2" %>
          <% if resource.errors.include?(:password_confirmation) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:password_confirmation).first}" %>
          <% end %>
        </div>

        <div class="actions pb-3">
          <%= f.submit "新しいアカウントを作成", class: "col-md-12 btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name) %>
    </div>
  </div>
</div>
