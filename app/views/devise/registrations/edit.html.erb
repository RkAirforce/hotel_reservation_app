<div class="container py-5">
  <div class="user-edit-wrapper col-md-8 offset-md-2 col-sm-12 text-center border rounded shadow-sm">
    <h2 class="my-3">アカウント編集</h2>
    <div class="form-trim col-8 offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <% if resource.errors.include?(:email) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:email).first}" %>
          <% end %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= label_tag "変更後パスワード（変更する場合のみ入力)" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors.include?(:password) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:password).first}" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= label_tag "パスワード確認用（変更する場合のみ入力）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors.include?(:password_confirmation) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:password_confirmation).first}" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password,
                  autocomplete: "current-password", class: "form-control",
                  placeholder: "現在のパスワードを入力"  %>
          <% if resource.errors.include?(:current_password) %>
            <p class="pt-1" style="color: red;"><%= "※ #{resource.errors.full_messages_for(:current_password).first}" %>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "col-md-12 form-control btn btn-primary my-4" %>
          <%= link_to "戻る", root_path, class: "col-md-12 form-control btn border" %>
        </div>
      <% end %>

      <p><%= link_to "アカウントを削除", registration_path(resource_name),
                data: { confirm: "削除しますか?" }, method: :delete, class: "btn btn-danger my-5" %></p>
    </div>
  </div>
</div>
